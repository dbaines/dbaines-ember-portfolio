<div class="portfolio_full">

  <div class="porfolio--header">
    {{!-- <a href="#" {{action "previous"}} title="Previous project" class="portfolio--prev portfolio--nav"><<span> prev</span></a>
    <a href="#" {{action "next"}} title="Next project" class="portfolio--next portfolio--nav"><span>next </span>></a> --}}
    <h2 class="heading-two">{{title}}</h2>
  </div>
  <div class="portfolio--container">
    <div class="portfolio--images">
      <div class="fotorama" data-width="100%" data-nav="thumbs" data-loop="true" data-max-height="800" data-fit="scaledown" data-arrows="false">
        {{#if image_src}}
          <img {{bind-attr src=imagePath}} />
        {{/if}}
        {{#if images}}
          {{#each images}}
            <img {{bind-attr src=this}} />
          {{/each}}
        {{/if}}
      </div>
    </div>
    {{#if agency}}
      <div class="portfolio--meta">
        <strong>Agency:</strong> {{agency}}
      </div>
    {{/if}}
    {{#if description}}
      <div class="portfolio--description">
        {{{description}}}
      </div>
    {{/if}}
  </div>
</div>